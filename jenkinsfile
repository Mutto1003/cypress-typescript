pipeline {
    agent any
    // triggers {
    //     cron('* * * * *')
    // }
    stages {
        stage('Dependacy Install') {
            steps {
                echo '#### Start Install all dependency ####'
                sh """
                source ~/.zshrc
                npm install
                """
            }
        }
        stage('Running Test Script') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh """
                    source ~/.zshrc
                    npx cypress run --spec 'cypress/e2e/2-apiTesting/HeadersAndCookies.cy.ts'
                    """      
                }
            }
        }
        stage('Sent to Email') {
            steps {
                script {
                sh """
                    source ~/.zshrc
                    npx ts-node cypress/support/sendToEmail.ts
                    """
                }
            }
        }
    }
}